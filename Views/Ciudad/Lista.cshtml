@model List<Ciudad>

<h1>Lista de ciudades registradas</h1>

<ol>
    @if (Model.Count==0)
    {
        <div class="alert alert-warning"></div>
    }

    @foreach (var c in Model)
    {
        <li class="d-flex"></li>
        <div> <img src="@c.Foto" /> </div>
        <div>@c.NombreC</div>
    }
</ol>